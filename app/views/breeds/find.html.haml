                = radio_button_tag(:space, "none")
                = label_tag(:space_none, "#{@answers[24].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:space, "medium")
                = label_tag(:space_medium, "#{@answers[25].answer_value}")
