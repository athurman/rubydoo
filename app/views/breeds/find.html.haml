= render partial: "shared/nav"
.container.breeds-find
  .row
    .small-12.columns
      .find-breeds-container.small-12.columns
        = form_tag(breeds_path, :method => 'get') do
          %section#question-1
            %h3.text-center What size dog are you interested in?
            .row
              .small-12.columns
                = radio_button_tag(:size, "tiny")
                = label_tag(:size_tiny, "#{@answers[0].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:size, "small")
                = label_tag(:size_small, "#{@answers[1].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:size, "medium")
                = label_tag(:size_medium, "#{@answers[2].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:size, "large")
                = label_tag(:size_large, "#{@answers[3].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:size, "giant")
                = label_tag(:size_giant, "#{@answers[4].answer_value}")
            %button.button.next-step Next
          %section#question-2.hidden
            %h3.text-center How energetic do you want your dog to be?
            .row
              .small-12.columns
                = radio_button_tag(:energy, "high")
                = label_tag(:energy_high, "#{@answers[5].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:energy, "daily")
                = label_tag(:energy_daily, "#{@answers[6].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:energy, "inactive")
                = label_tag(:energy_inactive, "#{@answers[7].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:energy, "null")
                = label_tag(:energy_null, "#{@answers[8].answer_value}")
            %button.button.next-step Next
          %section#question-3.hidden
            %h3.text-center How often will you be able to play with your dog?
            .row
              .small-12.columns
                = radio_button_tag(:time, "high")
                = label_tag(:time_high, "#{@answers[9].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:time, "medium")
                = label_tag(:time_medium, "#{@answers[10].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:time, "low")
