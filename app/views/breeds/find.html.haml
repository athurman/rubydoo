              .small-12.columns
                = radio_button_tag(:animal_friendly, "medium")
                = label_tag(:animal_friendly_medium, "#{@answers[13].answer_value}")
            .row
              .small-12.columns
                = radio_button_tag(:animal_friendly, "low")
                = label_tag(:animal_friendly_low, "#{@answers[14].answer_value}")
            %button.button.next-step Next
          %section#question-5.hidden
            %h3.text-center What is the main reason you want a dog?
            .row
              .small-12.columns
                = radio_button_tag(:role, "companion")
